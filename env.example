# Database Configuration
DATABASE_TYPE=postgresql
POSTGRESQL_HOST=localhost
POSTGRESQL_PORT=5432
POSTGRESQL_USER=postgres
POSTGRESQL_PASSWORD=password
POSTGRESQL_DATABASE=speech2sql
POSTGRESQL_URL=postgresql://postgres:password@localhost:5432/speech2sql

# API Keys
UPSTAGE_API_KEY=your_upstage_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your_elasticsearch_password_here

# Model Configuration
WHISPER_MODEL=base  # tiny, base, small, medium, large
SUMMARIZATION_MODEL=solar-1-mini-chat  # pegasus-large, llama2-7b
TEXT2SQL_MODEL=Qwen/Qwen2.5-3B-Instruct

# Audio Processing
AUDIO_UPLOAD_PATH=./data/raw
PROCESSED_AUDIO_PATH=./data/processed
